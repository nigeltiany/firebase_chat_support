{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "messages": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "recipients": {
          ".write": "auth != null && root.child('customer-support-agents').hasChild(auth.uid)"
        }
      }
    },
    "customer-support-agents": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}

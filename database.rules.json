{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "messages": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "$message_id": {
          "conversation_id": {
            ".write": "false"
          },
          "participants": {
            ".write": "auth != null && root.child('customer-support-agents').hasChild(auth.uid)"
          },
          "recipients": {
            ".write": "auth != null && root.child('customer-support-agents').hasChild(auth.uid)"
          }
        }
      }
    },
    "customer-support-agents": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": "lastClientAt"
    }
  }
}

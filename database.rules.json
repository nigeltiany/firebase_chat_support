{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "conversations":{
      "$guid": {
        ".read": "auth != null && root.child('conversations').child($guid).child('member_uids').hasChild(auth.uid)",
        ".write": "auth != null && root.child('conversations').child($guid).child('admins').hasChild(auth.uid)",
        "admins": {
          ".read": false,
          ".write": "auth != null && root.child('conversations').child($guid).child('admins').hasChild(auth.uid)",
          ".validate": "root.child('conversations').child($guid).child('member_uids').hasChild(newData.val())"
        },
        "closed": {
          ".read": false,
          ".write": "root.child('conversations').child($guid).child('admins').hasChild(auth.uid)",
          ".validate": "(newData.val() === true) || (newData.val() === false)"
        },
        "createdAt": {
          ".read": false,
          ".write": false
        },
        "members": {
          ".read": "auth != null && root.child('conversations').child($guid).child('member_uids').hasChild(auth.uid)",
          ".write": "auth != null && root.child('conversations').child($guid).child('admins').hasChild(auth.uid)"
        },
        "subject": {
          ".read": "auth != null && root.child('conversations').child($guid).child('member_uids').hasChild(auth.uid)",
          ".write": "auth != null && root.child('conversations').child($guid).child('admins').hasChild(auth.uid)"
        },
        "updatedAt": {
          ".read": false,
          ".write": false
        }
      }
    },
    "messages": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "$messageid": {
          "title": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid"
          },
          "sender": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid",
            ".validate": "(newData.val() === auth.displayName) || (auth.provider === 'anonymous' && newData.val() === 'Anonymous')"
          },
          "message": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid"
          },
          "auto": {
            ".read": false,
            ".write": false
          },
          "__response": {
            ".read": false,
            ".write": false
          },
          "conversation_id": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": false
          },
          "participants": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && root.child('customer-support-agents').hasChild(auth.uid)"
          },
          "recipients": {
            ".read": false,
            ".write": "auth != null && root.child('customer-support-agents').hasChild(auth.uid)"
          },
          "sentAt": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": false
          },
          "deliveredAt": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": false
          },
          "delivered": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": false
          },
          "sent": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": false
          },
          "read": {
            ".read": "auth != null && auth.uid == $uid",
            ".write": "auth != null && auth.uid == $uid",
            ".validate": "(newData.val() === true) || (newData.val() === false)"
          }
        }
      }
    },
    "customer-support-agents": {
      ".indexOn": "lastClientAt",
      "$agentid": {
        ".read": "auth != null && auth.uid == $agentid && root.child('customer-support-agents').hasChild(auth.uid)",
        ".write": "auth != null && auth.uid == $agentid && root.child('customer-support-agents').hasChild(auth.uid)"
      }
    }
  }
}